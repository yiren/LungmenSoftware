                        if ((i + 1)%5 == 0)
                        {
                            <br/>
                        }
                    }
                *@
        </div>
</div>
    </form>
    @Html.ActionLink("取得工作站清單","GetWorkStationsBySoftId", "FoxSoftwares")
</div>
