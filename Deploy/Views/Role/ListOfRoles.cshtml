@model List<LungmenSoftware.Models.ApplicationRole>

@{
    ViewBag.Title = "ListOfRoles";
}

<h2>角色-權限列表</h2>

<p>
    @Html.ActionLink("新增角色", "CreateRole")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model[0].ChtAlias)
        </th>

        <th>
            @Html.DisplayNameFor(model=>model[0].Description)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ChtAlias)
        </td>

        <td>
            @Html.DisplayFor(modelitem=>item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRole", new { id=item.Id })
        </td>
    </tr>
}

</table>
